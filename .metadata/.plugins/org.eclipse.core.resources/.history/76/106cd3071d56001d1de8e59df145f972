package pattern;
public class Pattern1 {

	public static void main(String[] args) {
		 
		for(int i=0;i<=5;i++) {
			System.out.print("* ");
			for(int j=1;j<=i;j++) {
				System.out.print(j+" ");
			}
			for(int k=i-1;k>0;k--) {
				System.out.print(k+" ");
			}
			if(i>0)
			System.out.println("*");
		}
	}

}
