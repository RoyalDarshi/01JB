package pattern.design;

public class Pattern10 {
	
	public static void pattern(int no) {
		int cn=no;
		for(int i=1;i<=no;i++) {
			System.out.print(i+" ");
			for(int j=1;j<i;j++) {
				System.out.print(i+j*no-j+" ");				
			}
			System.out.println();
		}		
	}

	public static void main(String[] args) {
		 
		pattern(5);
	}

}
