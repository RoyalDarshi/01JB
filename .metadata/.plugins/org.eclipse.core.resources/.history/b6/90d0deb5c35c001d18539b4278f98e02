package pattern.design;

import java.util.Iterator;

public class pattern1 {
	public static void getPattern(int n) {
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=n/2;j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		getPattern(4);
	}
}
